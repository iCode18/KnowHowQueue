
<QueueCanvas>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 4
        Image:
            source: 'KnowHow.jpg'
    BoxLayout:
        size_hint_y: 2.5
        Label:
            id: Customer
            text: str(root.customers) + ' står i køen'
            font_size: 50
            bold: True
    BoxLayout:
        size_hint_y: 3.5
        orientation: 'vertical'
        AnchorLayout:
            TextInput:
                id: name_register
                size: 400, 30
                size_hint: None, None
                multiline: False
                text: 'Registrer ditt navn i køen'
                on_touch_up :self.text= ''
        AnchorLayout:
            size_hint_y: 200
            Button:
                text: 'Registrer'
                font_size: 30
                bold: True
                size_hint: None, None
                size: 200, 50
                background_normal: 'button_normal.png'
                background_down: 'button_down.png'
                on_release: root.customers += 1;root.customer_register(); root.label_update();print(root.customersName.popleft())


