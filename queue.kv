
<QueueCanvas>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 4
        Image:
            source: 'KnowHow.jpg'
    BoxLayout:
        size_hint_y: 2.5
        Label:
            text: 'Nå betjenes {}'
            font_size: 50
            bold: True
    BoxLayout:
        size_hint_y: 3.5
        orientation: 'vertical'
        AnchorLayout:
            #size_hint_y: 1
            TextInput:
                id: 'name_register'
                size: 400, 30
                size_hint: None, None
                text: 'Registrer ditt navn i køen'
        AnchorLayout:
            size_hint_y: 200
            Button:
                text: 'Registrer'
                font_size: 30
                bold: True
                size_hint: None, None
                size: 200, 50
                background_normal: 'button_normal.png'
                background_down: 'button_down.png'

